<resources>
    <!-- Base application theme. -->
    <style name="Theme.Navigation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="fontFamily">@font/sofiapro_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="LargeTextStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:translationY">-3.6sp</item>
    </style>

    <style name="smallTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textColor">@color/description</item>
        <item name="android:translationY">-5.1sp</item>
    </style>

    <style name="login">
        <item name="android:textSize">36.41sp</item>
